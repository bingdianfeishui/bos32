<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.objectFactory" value="spring" />
	<!-- 在struts-plugin.xml中已配置 -->
	<package name="basicStruts" extends="struts-default">
		<interceptors>
			<interceptor name="bosLogin" class="com.itheima.bos.interceptor.BOSLoginInterceptor"></interceptor>
			<interceptor-stack name="myDefaultStack">
				<interceptor-ref name="bosLogin">
					<param name="excludeMethods">login</param>
				</interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefaultStack"></default-interceptor-ref>		
		<global-results>
			<result name="login">/login.jsp</result>
			<result name="relogin" type="redirect">/login.jsp</result>
		</global-results>
		
		<action name="page_*_*">
			<result type="dispatcher">/WEB-INF/pages/{1}/{2}.jsp</result>
		</action>
		
		<action name="userAction_*" class="userAction" method="{1}">
			<result name="home" type="redirect">/index.jsp</result>
		</action>
		
	</package>
</struts>